            android:layout_width="fill_parent"
            android:layout_height="175dp">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_row="1"
                android:layout_column="0"
                android:id="@+id/Grafica">
